    <script>
        $(document).ready(function () {
            // 1. Tìm phần tử thông báo
            var toast = $('#success-toast');

            // 2. Nếu phần tử đó tồn tại (nghĩa là TempData có tin nhắn)
            if (toast.length) {

                // Hàm để đóng thông báo
                function closeToast() {
                    toast.addClass('fade-out');
                    // Xóa phần tử khỏi DOM sau khi animation kết thúc (0.5s)
                    setTimeout(function () {
                        toast.remove();
                    }, 500);
                }

                // 3. Tự động đóng sau 5 giây (5000ms)
                var autoCloseTimer = setTimeout(closeToast, 5000);

                // 4. Cho phép người dùng tự đóng khi nhấn nút 'x'
                $('#toast-close').on('click', function () {
                    clearTimeout(autoCloseTimer); // Dừng việc tự động đóng
                    closeToast();
                });
            }
        });
    </script>
