@model IEnumerable<web_FE.Models.Order>
@using System.Linq
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Lịch Sử Mua Hàng";
}

<div class="container account-page">
    <div class="account-wrap">
        <aside class="sidebar">
            <h3>Tài khoản của tôi</h3>
            <ul>
                <li><a href="@Url.Action("Account", "Account")">Thông tin cá nhân</a></li>
                <li class="active"><a href="@Url.Action("Orders", "Account")">Lịch sử mua hàng</a></li>
                <li><a href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
            </ul>
        </aside>

        <section class="main-content">
            <h2>Lịch sử mua hàng</h2>
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Mã đơn</th>
                        <th>Ngày</th>
                        <th>Sản phẩm</th>
                        <th>Số lượng</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var order in Model)
                        {
                            <tr>
                                <td>#@order.Id</td>
                                <td>@order.Date</td>
                                <td>@order.Item</td>
                                <td>@order.Quantity</td>
                                <td>@order.Total.ToString("N0")₫</td>
                                <td><span class="status-@order.Status.ToLower().Replace(" ", "-")">@order.Status</span></td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="6">Bạn chưa có đơn hàng nào.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </section>
    </div>
</div>