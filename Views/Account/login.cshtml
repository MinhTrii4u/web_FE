@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Đăng Nhập";
}

<div class="container login-page">
    <div class="login-box">
        <h1>Đăng Nhập</h1>

        @* Hiển thị thông báo lỗi nếu có *@
        @if (ViewBag.Error != null)
        {
            <div class="msg error">@ViewBag.Error</div>
        }

        @* Form đăng nhập *@
        <form method="post" action="@Url.Action("Login", "Account")">
            <div class="form-group">
                <label for="email">Địa chỉ email <span class="required">*</span></label>
                <input type="email" id="email" name="email" placeholder="Nhập email của bạn" required />
            </div>

            <div class="form-group">
                <label for="password">Mật khẩu <span class="required">*</span></label>
                <input type="password" id="password" name="password" placeholder="Nhập mật khẩu" required />
            </div>

            <div class="form-group remember-me">
                <input type="checkbox" id="rememberme" name="rememberme" />
                <label for="rememberme">Ghi nhớ đăng nhập</label>
            </div>

            <div class="form-group">
                <button type="submit" class="login-submit-btn">Đăng Nhập</button>
            </div>

            <div class="login-links">
                <a href="#">Quên mật khẩu?</a>
                <span>|</span>
                <a href="@Url.Action("Register", "Account")">Tạo tài khoản mới</a> @* Link tới trang đăng ký sau này *@
            </div>
        </form>
    </div>
</div>