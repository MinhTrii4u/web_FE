@model IEnumerable<web_FE.Models.Product>
@using System.Linq
@{
    ViewBag.Title = "Trang Chủ";
}

<section class="banner">
    <div class="banner-content">
        <h2>BỘ SƯU TẬP MỚI NHẤT 2025</h2>
        <p>Khám phá những thiết kế đột phá và công nghệ đỉnh cao.</p>
        <a href="#" class="btn">Bắt đầu mua sắm</a>
    </div>
</section>
<div class="container">
    <section class="featured-products">
        <h2>Sản Phẩm Nổi Bật</h2>

        <div class="carousel-container">
            <button class="carousel-btn prev-btn">&lt;</button>

            <div class="product-carousel-wrapper">
                <div class="product-grid">

                    @foreach (var product in Model.Take(5)) // Chỉ lấy 5 sản phẩm đầu làm nổi bật
                    {
                        <div class="product-item">
                            <img src="@product.ImageUrl" alt="@product.Name">
                            <h3>@product.Name</h3>
                            <p class="price">@product.Price.ToString("N0")₫</p>
                            <button class="add-to-cart-btn">Thêm vào giỏ</button>
                        </div>
                    }
                </div>
            </div>

            <button class="carousel-btn next-btn">&gt;</button>
        </div>
    </section>

    <section class="iconic-kits">
        <h2>ICONIC KITS. TIMELESS LEGACY.</h2>
        <div class="kits-container">
            <div class="kit-item">
                <a href="#" class="kit-image-wrapper">
                    <img src="https://i.ibb.co/b5Cb3sj6/20250910092627.webp" alt="Juventus Kit">
                    <h3 class="kit-overlay-text">Juventus</h3>
                </a>
                <div class="kit-info">
                    <h4>Juventus 25/26 Third Kit</h4>
                    <p>Năng lượng Bò Tót cho Bianconeri.</p>
                    <a href="#" class="buy-now-link">Mua ngay</a>
                </div>
            </div>
            <div class="kit-item">
                <a href="#" class="kit-image-wrapper">
                    <img src="https://i.ibb.co/tMnhvjLL/Real-Madrid-25-26-Long-Sleeve-Home-Authentic-Jersey-White-JN8866-HM1.jpg" alt="Real Madrid Kit">
                    <h3 class="kit-overlay-text">Real Madrid</h3>
                </a>
                <div class="kit-info">
                    <h4>Real Madrid 25/26 Third Kit</h4>
                    <p>Màu biểu tượng. Madrid trường tồn.</p>
                    <a href="#" class="buy-now-link">Mua ngay</a>
                </div>
            </div>
            <div class="kit-item">
                <a href="#" class="kit-image-wrapper">
                    <img src="https://i.ibb.co/WWwKPhVD/Ao-djau-san-nha-chinh-hang-Manchester-United-mua-giai-25-26-DJo-JI7429-HM1.jpg" alt="Man Utd Kit">
                    <h3 class="kit-overlay-text">Man Utd</h3>
                </a>
                <div class="kit-info">
                    <h4>ManUtd 25/26 Third Kit</h4>
                    <p>Một biểu tượng bóng đá được cải biên.</p>
                    <a href="#" class="buy-now-link">Mua ngay</a>
                </div>
            </div>
            <div class="kit-item">
                <a href="#" class="kit-image-wrapper">
                    <img src="https://i.ibb.co/DHwfbWYw/Ao-djau-san-nha-Arsenal-mua-giai-2025-2026-chinh-hang-DJo-JI9516-HM1.jpg" alt="Arsenal Kit">
                    <h3 class="kit-overlay-text">Arsenal</h3>
                </a>
                <div class="kit-info">
                    <h4>Áo Đấu Thứ Ba Arsenal 25/26</h4>
                    <p>Dư âm Highbury, thiết kế táo bạo.</p>
                    <a href="#" class="buy-now-link">Mua ngay</a>
                </div>
            </div>
        </div>
    </section>

    <section class="products">
        <h2>TẤT CẢ SẢN PHẨM</h2>
        <div class="product-grid">

            @foreach (var product in Model) // Lặp qua toàn bộ danh sách
            {
                <div class="product-item">
                    <a href="#">
                        <div class="product-image">
                            <img src="@product.ImageUrl" alt="@product.Name">
                        </div>
                        <div class="product-info">
                            <span class="product-brand">@product.Brand</span>
                            <h3 class="product-name">@product.Name</h3>
                            <p class="product-price">@product.Price.ToString("N0")₫</p>
                        </div>
                    </a>
                    <button class="add-to-cart-btn">Thêm vào giỏ</button>
                </div>
            }
        </div>
    </section>

    <section class="brand-story">
        <h2>CỬA HÀNG THỂ THAO AD-STORE - HIỆU NĂNG & PHONG CÁCH</h2>
        <p>
            Thể thao nâng cao sức khoẻ. Giúp bạn luôn tỉnh táo. Kết nối chúng ta. Thông qua thể thao, chúng ta có sức mạnh để thay đổi cuộc sống—bằng những câu chuyện về các vận động viên truyền cảm hứng, công nghệ đột phá và bằng cách giúp bạn đứng lên và vận động.
        </p>
        <p>
            Khám phá cửa hàng trực tuyến của chúng tôi để cập nhật những bộ sưu tập mới nhất, nơi có những sản phẩm luôn dẫn đầu xu hướng, chạy nhanh hơn và tiến xa hơn với những sản phẩm luôn đồng hành cùng từng chuyển động và mục tiêu của bạn.
        </p>
    </section>
</div>